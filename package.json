{
  "name": "silence-of-the-tests",
  "displayName": "Silence of the Tests",
  "description": "This extension hides Rust unit tests from view, including #[test] functions and #[cfg(test)] modules, so you can focus purely on your implementation code",
  "version": "0.0.1",
  "publisher": "libincheeran",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Testing"
  ],
  "keywords": [
    "rust",
    "test",
    "testing",
    "unit-test",
    "hide",
    "fold",
    "productivity"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "YOUR_REPOSITORY_URL"
  },
  "bugs": {
    "url": "YOUR_REPOSITORY_URL/issues"
  },
  "homepage": "YOUR_REPOSITORY_URL#readme",
  "license": "MIT",
  "activationEvents": [
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "silence-of-the-tests.toggleTests",
        "title": "Toggle Rust Test Visibility"
      }
    ],
    "configuration": {
      "title": "Silence of the Tests",
      "properties": {
        "silenceOfTheTests.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable hiding of Rust unit tests (enabled by default)"
        }
      }
    },
    "keybindings": [
      {
        "command": "silence-of-the-tests.toggleTests",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorLangId == rust"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "typescript": "^5.1.3",
    "eslint": "^8.42.0",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.24.0"
  }
}
